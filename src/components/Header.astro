---
import { supabase } from "../lib/supabaseClient.js";

let session = null;

async function checkSession() {
    const {
        data: { session: userSession },
    } = await supabase.auth.getSession();
    session = userSession;
}
await checkSession();
---

<header>
    <div class="about-section">
        <a class="d_a" href="/">
            <img src="/images/logo.png" alt="Logo Centro Cultural Teatro Diana" />
        </a>
        <a class="d_a" href="about">
            <img src="/icons/info.svg" alt="Informaci칩n" title="M치s informaci칩n" />
        </a>
    </div>
    <div class="header-menu">
        <div class="login-menu">
            <p>"Un espacio aparte"</p>
            {
                session ? (
                    <div class="user-menu">
                        <span class="user-name">
                            {session.user.email.split("@")[0]}
                        </span>
                        <div class="dropdown-menu">
                            <a href="/api/logout" id="logout-button">
                                Cerrar sesi칩n
                            </a>
                        </div>
                    </div>
                ) : (
                    <a class="" href="/login">
                        Ingresar
                    </a>
                )
            }
        </div>
    </div>
</header>

<style>
    .d_a {
        background: transparent;
        cursor: pointer;
    }

    .d_a:hover {
        background: transparent;
    }

    .about-section {
        display: flex;
        flex-direction: row;
        gap: 10px;
    }
    
    nav {
        display: flex;
        gap: 10px;
    }

    header {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        height: fit-content;
        width: 100%;
        padding: 0.8rem;
        background: #4c2a1f;
    }

    span {
        color: #fefefe;
    }

    img {
        max-width: 250px;
        max-height: 40px;
    }

    div {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
    }

    a {
        display: flex;
        justify-content: center;
        align-items: center;
        background: #fefefe;
        color: black;
        text-decoration: none;
        padding: 0.5rem;
        border-radius: 5px;
        opacity: 95%;
        transition: transform 0.2s ease;
    }

    a:hover {
        background: white;
        opacity: 1;
    }

    p {
        color: #fefefe;
    }

    .user-menu {
        position: relative;
        display: inline-block;
    }

    .dropdown-menu {
        position: absolute;
        top: 100%;
        right: 0;
        background: white;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        display: none;
    }

    .user-menu:hover .dropdown-menu {
        display: block;
    }

    .dropdown-menu a {
        display: block;
        padding: 10px 15px;
        background: #800000;
        color: white;
        border-radius: 5px;
        text-align: center;
        text-decoration: none;
        transition:
            background-color 0.2s ease,
            box-shadow 0.2s ease;
    }

    .dropdown-menu a:hover {
        background: #a03a28;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
</style>
