---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Menú - Sistema de Liquidaciones">
    <!-- Sección de bienvenida -->
    <section class="welcome-section">
        <h1>Menu</h1>
    </section>

    <!-- Menú de navegación -->
    <section class="menu-section">
        <div class="menu-container">
            <a href="/eventos" class="menu-item">
                <img src="images/eventos.png" alt="Eventos" />
                <p>Eventos</p>
            </a>
            <a href="/liquidaciones" class="menu-item">
                <img src="images/liquidaciones.png" alt="Liquidaciones" />
                <p>Liquidaciones</p>
            </a>
            <a href="/reportes" class="menu-item">
                <img src="images/reportes.png" alt="Reportes" />
                <p>Reportes</p>
            </a>
        </div>
    </section>
</Layout>

<style>
    .menu-section {
    text-align: center;
    padding: 40px 0;
    flex-grow: 1;
}

.menu-container {
    display: flex;
    justify-content: center;
    gap: 40px;
    margin-bottom: 40px;
}

.menu-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    text-decoration: none;
    color: #fff;
    background-color: #003366;
    padding: 20px;
    border-radius: 10px;
    width: 150px;
    transition: background-color 0.3s ease-in-out;
}

.menu-item:hover {
    background-color: #0055aa;
}

.menu-item img {
    width: 50px;
    margin-bottom: 10px;
}

.menu-item p {
    font-size: 1.2em;
    margin: 0;
}

/* Media query para pantallas móviles */
@media (max-width: 768px) {
    .menu-container {
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }

    .menu-item {
        width: 90%;
        max-width: 300px; /* Ajusta el ancho máximo según lo que consideres adecuado */
        padding: 15px;
    }

    .menu-item img {
        width: 40px;
    }

    .menu-item p {
        font-size: 1em;
    }
}
</style>
